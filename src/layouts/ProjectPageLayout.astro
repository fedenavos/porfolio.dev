---
import "@fontsource-variable/onest";

import Layout from "./Layout.astro";

interface Props {
  title: string;
  description: string;
}

const { description, title } = Astro.props;
---

<Layout title={title} description={description}>
  <div class="content">
    <slot />
  </div>
  <style is:inline>
    .content {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 5rem 4rem 1rem 4rem;
      min-height: 85vh;
      max-width: 800px;
      text-align: left;
      overscroll-behavior: inherit;
      align-items: center;
    }

    .content h1 {
      text-decoration: dashed;
    }

    .content h1,
    .content h2,
    .content h3 {
      color: #333;
      font-weight: bold;
    }

    .content h1 {
      font-size: 2.5rem;
      margin-bottom: 1rem;
    }

    .content h2 {
      font-size: 2rem;
      margin-bottom: 0.75rem;
      margin-top: 1rem;
    }

    .content h3 {
      font-size: 1.5rem;
      margin-bottom: 0.5rem;
    }

    .content p {
      line-height: 1.6;
      margin-bottom: 1rem;
    }

    .content ul,
    .content ol {
      margin-left: 1.5rem;
      margin-bottom: 1rem;
      list-style-type: disc;
    }

    .content li {
      margin-bottom: 0.5rem;
    }

    .content .gallery {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 0.5rem;
      flex-direction: row;
      margin: 1em 0;
    }

    .content .gallery img {
      max-width: 32%;
      max-height: 470px;
      border-radius: 0.5rem;
    }

    .content img {
      max-width: 100%;
      max-height: 450px;
      border-radius: 0.5rem;
      padding: 1rem;
    }

    .content a {
      color: #0066cc;
      text-decoration: none;
    }

    .content a button {
      border-radius: 2em;
      padding: 0.5em 1em;
      background-color: #0066cc;
      color: white;
      border: none;
      cursor: pointer;
      margin-bottom: 1rem;
    }

    .content a:hover,
    .content a:focus {
      text-decoration: underline;
    }

    @media (prefers-color-scheme: dark) {
      .content,
      .content h1,
      .content h2,
      .content h3,
      .content p,
      .content li {
        color: rgba(
          255,
          255,
          255,
          0.9
        );
      }
      .content a {
        color: #0096ff; 
      }
    }
  </style>
</Layout>
