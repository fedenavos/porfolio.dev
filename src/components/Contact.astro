---
import GitHub from "./icons/GitHub.astro";
import LinkedIn from "./icons/LinkedIn.astro";
import Instagram from "./icons/Instagram.astro";
---

<div class="flex flex-wrap justify-between">
  <section class="w-full md:w-2/3 px-2">
    <form name="contact" method="POST" class="space-y-4">
      <div class="flex flex-wrap -mx-2">
        <div class="w-full md:w-1/2 px-2 mb-4">
          <label for="name" class="block text-sm font-medium dark:text-gray-200"
            >Nombre</label
          >
          <input
            type="text"
            name="name"
            id="name"
            class="mt-1 p-2 block w-full dark:bg-gray-800 rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
          />
        </div>
        <div class="w-full md:w-1/2 px-2 mb-4">
          <label for="email" class="block text-sm font-medium dark:text-gray-200"
            >Email</label
          >
          <input
            type="text"
            name="email"
            id="email"
            class="mt-1 p-2 block w-full dark:bg-gray-800 rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
          />
        </div>
      </div>
      <div class="px-2 mb-4">
        <label for="message" class="block text-sm font-medium dark:text-gray-200"
          >Mensaje</label
        >
        <textarea
          name="message"
          id="message"
          rows="5"
          class="mt-1 p-2 block w-full dark:bg-gray-800 rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
        ></textarea>
      </div>
      <div class="flex justify-center">
        <button
          class="px-4 py-2 bg-blue-500 text-white rounded-md bg-gray-800 border border-gray-600 focus-visible:ring-blue-500/80 text-md hover:bg-gray-800 hover:border-gray-900 group max-w-fit rounded-xl hover:text-white focus:outline-none focus-visible:outline-none focus-visible:ring focus-visible:ring-white focus-visible:ring-offset-2 active:bg-black"
          type="submit">Enviar mensaje</button
        >
      </div>
    </form>
  </section>
  <section class="w-full md:w-1/3 px-6">
    <ul class="contact space-y-4">
      <li>
        <h3 class="font-semibold">Email</h3>
        <a
          href="mailto:fedenavos@gmail.com"
          rel="external"
          class="text-blue-500 hover:underline">fedenavos@gmail.com</a
        >
      </li>
      <li>
        <h3 class="font-semibold">Sociales</h3>
        <ul class="flex space-x-4 mt-2">
          <li>
            <a
              href="https://github.com/fedenavos"
              class="hover:text-orange-600"
              target="_blank"><GitHub class="size-8" /></a
            >
          </li>
          <li>
            <a
              href="https://www.instagram.com/fedenavos/"
              target="_blank"
              class="hover:text-pink-600"><Instagram class="size-8" /></a
            >
          </li>
          <li>
            <a
              href="https://www.linkedin.com/in/federico-navos/"
              class="hover:text-blue-600"
              target="_blank"><LinkedIn class="size-8" /></a
            >
          </li>
        </ul>
      </li>
    </ul>
  </section>
</div>
