---
const personalImageAlt = "Federico Nav√≥s";
import SocialPill from "@/components/SocialPill.astro";
import LinkedInIcon from "@/components/icons/LinkedIn.astro";
import MailIcon from "@/components/icons/Mail.astro";
import Badge from "./Badge.astro";
import GitHub from "./icons/GitHub.astro";
import NewWindow from "./icons/NewWindow.astro";
import { t } from "i18next";
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-24"
      src="/fedenavos.webp"
      alt={personalImageAlt}
    />
    <a
      href="https://mibot.vercel.app/"
      target="_blank"
      rel="noopener"
      class="flex items-center transition ml-2 md:justify-center md:hover:scale-105"
    >
      <Badge>{t("hero.aboutLink")} <NewWindow class="size-4 ml-3 mb-1"/></Badge>
    </a>
  </div>
  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
  >
    {t("hero.salutation")}
  </h1>
  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-blue-200 [&>strong]:text-blue-500 [&>strong]:font-semibold dark:text-gray-300"
  >
    <strong>{t("hero.profession")}</strong
    > {t("hero.description")}
  </p>
  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="mailto:fedenavos@gmail.com">
      <MailIcon class="size-4" />
      {t("hero.contactMe")}
    </SocialPill>
    <SocialPill href="https://www.linkedin.com/in/federico-navos/">
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
    <SocialPill href="https://github.com/fedenavos">
      <GitHub class="size-4" />
      Github
    </SocialPill>
  </nav>
</div>
